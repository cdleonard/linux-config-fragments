# debugger support
CONFIG_DEBUG_KERNEL=y
CONFIG_DEBUG_INFO=y
CONFIG_GDB_SCRIPTS=y

# pretty prints
CONFIG_PRINTK_TIME=y
CONFIG_DYNAMIC_DEBUG=y

# This should almost always be ON anyway
CONFIG_DEBUG_FS=y

# debug PM
CONFIG_PM_DEBUG=y
CONFIG_PM_ADVANCED_DEBUG=y

# debug tweaks
CONFIG_PROVE_RCU=n
CONFIG_PROVE_LOCKING=y
CONFIG_SLUB_DEBUG=y

# ftrace
CONFIG_FTRACE=y
CONFIG_TRACER_SNAPSHOT=y
CONFIG_ENABLE_DEFAULT_TRACERS=y

# relay is used by systemtap
CONFIG_RELAY=y
CONFIG_KPROBES=y

# ramoops
CONFIG_PSTORE=y
CONFIG_PSTORE_CONSOLE=y
CONFIG_PSTORE_PMSG=y
CONFIG_PSTORE_RAM=y

# ramoops+ftrace
CONFIG_FUNCTION_TRACER=y
CONFIG_PSTORE_FTRACE=y

# for thermal testing
CONFIG_THERMAL_WRITABLE_TRIPS=y

# enable sysrq
CONFIG_MAGIC_SYSRQ=y
